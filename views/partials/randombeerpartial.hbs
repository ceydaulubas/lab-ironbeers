<div class="col-md-3">
    <div class="card">
       <img class="card-img" src="{{this.image_url}}" alt="{{this.name}}">
        <div class="card-body">
            <h5 class="card-title"><b>{{this.name}}</b></h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.tagline}}</p>
            <p class="card-text">{{this.food_pairing}}</p>
            <p class="card-text">{{this.brewers_tips}}</p>
        </div>
    </div>
</div>